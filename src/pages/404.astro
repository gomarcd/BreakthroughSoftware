---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout title="Page Not Found | Breakthrough Software">
    <section class="py-20 md:py-28 animate-fade-in">
        <div class="container mx-auto px-4 text-center">
            <div class="max-w-2xl mx-auto">
                <div class="text-darkmodeprimary mb-8">
                    <span class="text-8xl md:text-9xl font-bold tracking-tight">404</span>
                </div>
                
                <h1 class="text-3xl md:text-4xl font-bold mb-6 text-dpdarkblue dark:text-white">
                    Page Not Found
                </h1>
                
                <p class="text-xl text-dpdarkblue/70 dark:text-white/80 mb-10">
                    Oops! The page you're looking for doesn't exist or has been moved.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/" class="btn-primary flex items-center justify-center">
                        Return to Home
                        <Icon name="lucide:home" class="w-5 h-5 ml-2" />
                    </a>
                    
                    <a href="/projects" class="btn-secondary flex items-center justify-center">
                        Browse Our Work
                        <Icon name="lucide:arrow-right" class="w-5 h-5 ml-2" />
                    </a>
                </div>
            </div>
        </div>
    </section>
    
    <section class="py-16 animate-slide-up">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto">
                <div class="bg-gray-50 dark:bg-darkmodebackground/40 p-8 rounded-lg">
                    <h2 class="text-2xl font-bold mb-4 text-dpdarkblue dark:text-white">
                        Here are some helpful links
                    </h2>
                    
                    <ul class="space-y-4">
                        <li>
                            <a href="/" class="flex items-center text-darkmodeprimary hover:text-darkmodeprimary/80 transition">
                                <Icon name="lucide:arrow-right" class="w-5 h-5 mr-2" />
                                Home
                            </a>
                        </li>
                        <li>
                            <a href="/projects" class="flex items-center text-darkmodeprimary hover:text-darkmodeprimary/80 transition">
                                <Icon name="lucide:arrow-right" class="w-5 h-5 mr-2" />
                                Our Work
                            </a>
                        </li>
                        <li>
                            <a href="/about" class="flex items-center text-darkmodeprimary hover:text-darkmodeprimary/80 transition">
                                <Icon name="lucide:arrow-right" class="w-5 h-5 mr-2" />
                                About Us
                            </a>
                        </li>
                        <li>
                            <a href="/about#contact" class="flex items-center text-darkmodeprimary hover:text-darkmodeprimary/80 transition">
                                <Icon name="lucide:arrow-right" class="w-5 h-5 mr-2" />
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .btn-primary {
        @apply bg-darkmodeprimary text-white font-semibold py-3 px-6 rounded-md hover:bg-darkmodeprimary/90 transition;
    }
    
    .btn-secondary {
        @apply bg-white dark:bg-darkmodebackground text-darkmodeprimary border-2 border-darkmodeprimary font-semibold py-3 px-6 rounded-md hover:bg-darkmodeprimary/10 transition;
    }
</style>