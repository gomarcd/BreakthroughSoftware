---
import { getCollection } from "astro:content";
import Layout from '../../layouts/Layout.astro';
import '../../styles/digipom.css';
import { format } from 'date-fns';
import sanitizeHtml from 'sanitize-html';
import MarkdownIt from 'markdown-it';

const latestPosts = await getCollection("news");
const parser = new MarkdownIt();

export async function getStaticPaths() {
    const newsEntries = await getCollection('news');

    return newsEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
};

const { entry } = Astro.props;
const { Content } = await entry.render();

---

<Layout title="News - Digipom">
	<section class="blog-post px-4 py-3 lg:px-0 mb-14 lg:max-w-[1110px] lg:mx-auto md:flex md:items-center md:justify-start">
		<div class="w-full md:w-[730px] float-right">
            <h2 class="mb-8 font-bold text-forty md:text-5xl tracking-tight leading-normal md:leading-normal my-4">{entry.data.title}</h2>
            <img src={entry.data.image} class="mb-8" />
            <div class="mb-8">{format(new Date(entry.data.publishedDate), 'MMMM d, yyyy')}</div>
            <Content />
            <div class="mb-6">Tags: 
            	{
            		entry.data.tags.map(tag => (
		        		<a class="text-dpgreen" href="/">#{tag} </a>
	            	))
	            }
			</div>
            <div class="flex items-center gap-2 mb-12 md:mb-0">Share: <a href="/rss.xml"><img src="/images/Rss.png" /></a> <a href="https://twitter.com/Digipom"><img src="/images/Twitter.png" /></a></div>
		</div>
	</section>

    <section class="px-4 py-3 lg:px-0 mb-8 md:text-twentytwo lg:max-w-[1110px] lg:mx-auto">
		<div class="mb-6 md:mb-10 font-extrabold text-thirtyfour text-dpdarkblue tracking-tight">Latest articles</div>
		<div class="md:flex md:justify-between">
			<!-- Show latest 4 posts -->
			{
				latestPosts.sort((a, b) => new Date(b.data.publishedDate).valueOf() - new Date(a.data.publishedDate).valueOf()).slice(0,4).map((post) => (
                    <div class="md:max-w-[240px] grid grid-flow-row auto-rows-max content-between mb-10">
						<a href={`/news/${post.slug}`} class="font-bold text-twentytwo leading-8 text-dpdarkblue mb-2">
							{post.data.title}
						</a>
						<p class="text-dpdarkblue text-base text-opacity-60 mb-4 line-clamp-3">
							{post.data.description}
						</p>
						<a href={`/news/${post.slug}`} class="transition flex items-center justify-center gap-3 border-2 border-dpgreen rounded hover:bg-dpgreen w-40 py-4 font-semibold text-sm text-dpgreen hover:text-white mb-4">
							Read more
							<svg width="8" height="15" viewBox="0 0 8 15" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M1 13.7552L7 7.75525L1 1.75525" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</a>
					</div>					
                ))
			}
			
			<!-- END Looped news items -->
		</div>
	</section>
</Layout>

<style is:global>
	.blog-post p {
		padding-bottom: 18px;
	}
	.blog-post p:last-child {
		padding-bottom: 0;
	}
	.blog-post a:link, .blog-post a:active, .blog-post a:visited, .blog-post a:focus {
		color: #408712;
	}
	.blog-post h1, .blog-post h2, .blog-post h3, .blog-post h4, .blog-post h5 {
		color: #0E0E2C;
		font-weight: 700 !important;
	}
	.blog-post h1 {
		font-size: 1.8rem !important;
	}
	.blog-post h2 {
		font-size: 1.5rem !important;
	}
	.blog-post h3 {
		font-size: 1.3rem !important;
	}
	.blog-post h4 {
		font-size: 1.2rem !important;
	}
	h.blog-post 5 {
		font-size: 1.1rem !important;
	}
	.blog-post .astro-code {
		padding: 12px;
		border-radius: 4px;
	}
</style>