---
// ServiceCard.astro
// A reusable component for displaying services

import { Icon } from 'astro-icon/components';

export interface Props {
    title: string;
    description: string;
    icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="service-card p-6 bg-white dark:bg-darkmodebackground rounded-lg shadow-md dark:shadow-gray-700/30 transition hover:shadow-lg dark:hover:shadow-gray-600/40 border-l-4 border-transparent hover:border-darkmodeprimary">
    <div class="service-icon mb-4 text-darkmodeprimary">
        <Icon name={icon} class="w-12 h-12" />
    </div>
    <h3 class="text-xl font-bold mb-3 text-dpdarkblue dark:text-white">{title}</h3>
    <p class="text-dpdarkblue/70 dark:text-white/80">{description}</p>
</div>